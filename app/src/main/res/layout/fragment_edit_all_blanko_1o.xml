<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/min_padding"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Blanko 01-O"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBlanko01EditAll"
            android:layout_above="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/tvTitle"/>

        <TextView
            android:id="@+id/notFoundText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Belum ada data"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/secondaryTextColor" />

        <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/min_padding"
            android:orientation="vertical"
            android:background="@color/primaryTextColor"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Luas Sawah Irigasi"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryTextColor"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="MT1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="MT2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="MT3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryTextColor"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/usulanMT1LsIrigasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="12sp"
                    android:text="Usulan 100 ha"/>

                <TextView
                    android:id="@+id/usulanMT2LsIrigasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="12sp"
                    android:text="Usulan 100 ha"/>

                <TextView
                    android:id="@+id/usulanMT3LsIrigasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="12sp"
                    android:text="Usulan 100 ha"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryTextColor"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/KeputusanMT1LsIrigasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="12sp"
                    android:text="Keputusan 100 ha"/>

                <TextView
                    android:id="@+id/keputusanMT2LsIrigasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="12sp"
                    android:text="Keputusan 100 ha"/>

                <TextView
                    android:id="@+id/keputusanMT3LsIrigasi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="12sp"
                    android:text="Keputusan 100 ha"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>