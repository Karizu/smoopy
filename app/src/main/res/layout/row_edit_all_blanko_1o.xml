<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/namaIp3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="IP3A/GP3A Sukamulya Makmur"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namaIp3a"
                android:orientation="horizontal"
                android:padding="@dimen/default_padding">

                <include
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    layout="@layout/form_blanko_1o_padi" />

                <include layout="@layout/form_blanko_1o_tebu_tua"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include layout="@layout/form_blanko_1o_tebu_muda"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include layout="@layout/form_blanko_1o_palawija"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include layout="@layout/form_blanko_1o_keperluan_lain"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include layout="@layout/form_blanko_1o_bero"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include layout="@layout/form_blanko_1o_gol_tanam"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />

                <include layout="@layout/form_blanko_1o_tgl_pengolahan_tanah"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="100dp" />

            </LinearLayout>

        </RelativeLayout>

    </HorizontalScrollView>

</FrameLayout>

